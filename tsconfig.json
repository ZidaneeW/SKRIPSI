{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "jsx": "react-native", //supaya mendukung JSX di React Native.
    "esModuleInterop": true, //untuk import default dari module require.
    "skipLibCheck": true, //lewati pengecekan tipe dari dependencies (menghindari warning tidak penting).
    "forceConsistentCasingInFileNames": true //aktifkan pengecekan ketat TypeScript (opsional, bisa kamu ubah jadi false kalau mau lebih longgar).
  }
}
